name: KNN_Tuning_Final

conda_env: conda.yaml

entry_points:
  main:
    parameters:
      data_path: {type: string, default: "customer_behavior_preprocessing.csv"}
      n_neighbors: {type: int, default: 5}
      weights: {type: string, default: "uniform"}
    command: "python modelling_tuning.py --data_path {data_path} --n_neighbors {n_neighbors} --weights {weights}"


